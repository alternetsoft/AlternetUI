<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\Version\Version.props" />
  <Import Project="..\Keys\Keys.props" />

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Nullable>enable</Nullable>
    <LangVersion>12.0</LangVersion>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <ProduceReferenceAssembly>true</ProduceReferenceAssembly>

  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="StyleCop.Analyzers" Version="1.1.118">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Interfaces\" />
  </ItemGroup>

  <!-- ================================================= -->
  <!-- add exists for private key -->
  <Target Name="SignDll" AfterTargets="AfterBuild"
          Condition="'$(Configuration)'!='Debug' and $([MSBuild]::IsOsPlatform('Windows')) and Exists('..\Keys\Private.props')">
   
    <Message Text="OutDir: $(OutDir)" Importance="high" Condition="false" />
    <Message Text="OutputPath: $(OutputPath)" Importance="high" Condition="false" />
    <Message Text="AssemblyName: $(AssemblyName)" Importance="high" Condition="false" />
    <Message Text="BaseOutputPath: $(BaseOutputPath)" Importance="high" Condition="false" />
    <Message Text="ModuleAssemblyName: $(ModuleAssemblyName)" Importance="high" Condition="false" />
    <Message Text="MSBuildThisFileDirectory: $(MSBuildThisFileDirectory)" Importance="high" Condition="false" />
    <Message Text="MSBuildProjectDirectory: $(MSBuildProjectDirectory)" Importance="high" Condition="false" />

    <PropertyGroup>
      <ThisDllPath>$(MSBuildProjectDirectory)\$(OutDir)\$(AssemblyName).dll</ThisDllPath>
      <ThisDllFullPath>$([System.IO.Path]::GetFullPath('$(ThisDllPath)'))</ThisDllFullPath>
      <ExistsThisDllPath>false</ExistsThisDllPath>
    </PropertyGroup>

    <PropertyGroup Condition="Exists($(ThisDllFullPath))">
      <ExistsThisDllPath>true</ExistsThisDllPath>
    </PropertyGroup>

    <Message Text="ThisDllPath: $(ThisDllPath)" Importance="high" Condition="false" />
    <Message Text="ThisDllFullPath: $(ThisDllFullPath)" Importance="high" Condition="false" />
    <Message Text="Exists ThisDllFullPath: $(ExistsThisDllPath)" Importance="high" Condition="false" />

    <Exec Command="call $(MSBuildThisFileDirectory)/../../Install.Scripts/SignTools/Sign.Alternet.UI.Interfaces.bat"/>
  </Target>

  <!-- ================================================= -->

</Project>
