<Window x:Class="CustomControlsSample.MainWindow"
        xmlns="http://schemas.alternetsoft.com/ui/2021"
        xmlns:x="http://schemas.alternetsoft.com/ui/2021/uixml"
        xmlns:local="clr-namespace:CustomControlsSample;assembly=CustomControlsSample"
        Title="Alternet UI Custom Controls Sample"
        Width="600" Height="400">
    <StackPanel Orientation="Vertical" Margin="10">
        <Button/>
        <!--<local:CustomDrawnControl Margin="0,10,0,10" Name="customDrawnControl" />-->

        <!--<local:CustomColorPicker Value="Red" ValueChanged="ColorPicker_ValueChanged" Name="colorPicker" HorizontalAlignment="Left"/>-->

        <StackPanel Orientation="Horizontal">
            <Slider Minimum="0" Maximum="100" Value="{Binding IntValue}" TickFrequency="25" VerticalAlignment="Center" Margin="0,0,5,0" Width="100"/>
            <Label Text="{Binding IntValue}" VerticalAlignment="Center" Margin="0,0,5,0" Width="40"/>
            <local:KnobControl Minimum="0" Maximum="100" Value="{Binding IntValue}" Name="knob1" Margin="0,0,5,0"/>
            <local:KnobControl Minimum="0" Maximum="100" Value="{Binding IntValue}" Name="knob2" Margin="0,0,5,0"/>
            <ProgressBar Minimum="0" Maximum="100" Value="{Binding IntValue}" VerticalAlignment="Center" Margin="0,0,5,0" Width="100"/>
            <local:GaugeControl Minimum="0" Maximum="100" Value="{Binding IntValue}" VerticalAlignment="Center" Margin="0,0,5,0" Width="100"/>
        </StackPanel>

