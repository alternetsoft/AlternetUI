<Control xmlns="http://schemas.alternetsoft.com/ui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ControlsSample;assembly=ControlsSample"
         >
    <StackPanel Orientation="Vertical" Padding="10">
        <GroupBox Title="Tree View">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TreeView Width="300" Height="300" Name="treeView"/>
                <StackPanel Orientation="Vertical" Margin="5,0,0,0">
                    <Button Text="Add Item" Name="addItemButton" />
                    <Button Text="Remove Item" Name="removeItemButton" Margin="0,3,0,0" />
                    <Button Text="Add 5000 Items" Name="addManyItemsButton" Margin="0,3,0,0" />
                    <CheckBox Text="Allow Multiple Selection" Name="allowMultipleSelectionCheckBox" Margin="0,10,0,0"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Control>