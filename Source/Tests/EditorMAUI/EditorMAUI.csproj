<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks Condition="$([MSBuild]::IsOSPlatform('windows'))">net8.0-windows10.0.19041.0</TargetFrameworks>

		<TargetFrameworks>$(TargetFrameworks)</TargetFrameworks>
		<!-- ;net8.0-ios;net8.0-maccatalyst;net8.0-android -->
      
      
      <!-- Uncomment to also build the tizen app. You will need to install tizen
      by following this: https://github.com/Samsung/Tizen.NET -->
		<!-- <TargetFrameworks>$(TargetFrameworks);net8.0-tizen</TargetFrameworks> -->

		<!-- Note for MacCatalyst:
		The default runtime is maccatalyst-x64, except in Release config, in which case
        the default is maccatalyst-x64;maccatalyst-arm64.
		When specifying both architectures, use the plural <RuntimeIdentifiers> instead
        of the singular <RuntimeIdentifer>.
		The Mac App Store will NOT accept apps with ONLY maccatalyst-arm64 indicated;
		either BOTH runtimes must be indicated or ONLY macatalyst-x64. -->
		<!-- For example: <RuntimeIdentifiers>maccatalyst-x64;maccatalyst-arm64</RuntimeIdentifiers> -->

		<OutputType>Exe</OutputType>
		<RootNamespace>EditorMAUI</RootNamespace>
		<UseMaui>true</UseMaui>
		<SingleProject>true</SingleProject>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- Display name -->
		<ApplicationTitle>SpinPaint</ApplicationTitle>

		<!-- App Identifier -->
		<ApplicationId>com.companyname.spinpaint</ApplicationId>

		<!-- Versions -->
		<ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
		<ApplicationVersion>1</ApplicationVersion>

		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'ios'">11.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'maccatalyst'">13.1</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">21.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.17763.0</SupportedOSPlatformVersion>
		<TargetPlatformMinVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.17763.0</TargetPlatformMinVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'tizen'">6.5</SupportedOSPlatformVersion>
	</PropertyGroup>

	<ItemGroup>
		<!-- App Icon -->
		<MauiIcon Include="Resources\AppIcon\appicon.svg" ForegroundFile="Resources\AppIcon\appiconfg.svg" Color="#512BD4" />

		<!-- Splash Screen -->
		<MauiSplashScreen Include="Resources\Splash\splash.svg" Color="#512BD4" BaseSize="128,128" />

		<!-- Images -->
		<MauiImage Include="Resources\Images\*" />
		<MauiImage Update="Resources\Images\dotnet_bot.svg" BaseSize="168,208" />

		<!-- Custom Fonts -->
		<MauiFont Include="Resources\Fonts\*" />

		<!-- Raw Assets (also remove the "Resources\Raw" prefix) -->
		<MauiAsset Include="Resources\Raw\**" LogicalName="%(RecursiveDir)%(Filename)%(Extension)" />
	</ItemGroup>

	<ItemGroup>
	  <Compile Remove="Content\newfile-small.cs" />
	  <Compile Remove="Content\newfile.cs" />
	</ItemGroup>

	<ItemGroup>
	  <None Remove="Content\newfile-scripts.html" />
	  <None Remove="Content\newfile.html" />
	  <None Remove="Content\newfile.py" />
	  <None Remove="Content\newfile.uixml" />
	  <None Remove="Content\newfile.xml" />
	</ItemGroup>

	<ItemGroup>
	  <EmbeddedResource Include="Content\newfile-scripts.html">
	    <CopyToOutputDirectory>Never</CopyToOutputDirectory>
	  </EmbeddedResource>
	  <EmbeddedResource Include="Content\newfile-small.cs">
	    <CopyToOutputDirectory>Never</CopyToOutputDirectory>
	  </EmbeddedResource>
	  <EmbeddedResource Include="Content\newfile.cs">
	    <CopyToOutputDirectory>Never</CopyToOutputDirectory>
	  </EmbeddedResource>
	  <EmbeddedResource Include="Content\newfile.html">
	    <CopyToOutputDirectory>Never</CopyToOutputDirectory>
	  </EmbeddedResource>
	  <EmbeddedResource Include="Content\newfile.py">
	    <CopyToOutputDirectory>Never</CopyToOutputDirectory>
	  </EmbeddedResource>
	  <EmbeddedResource Include="Content\newfile.uixml">
	    <CopyToOutputDirectory>Never</CopyToOutputDirectory>
	  </EmbeddedResource>
	  <EmbeddedResource Include="Content\newfile.xml">
	    <CopyToOutputDirectory>Never</CopyToOutputDirectory>
	  </EmbeddedResource>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Maui.Controls" Version="8.0.60" />
		<PackageReference Include="Microsoft.Maui.Controls.Compatibility" Version="8.0.60" />
		<PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="8.0.0" />
		<PackageReference Include="SharpHook" Version="5.3.6" />
		<PackageReference Include="SkiaSharp.Views.Maui.Controls" Version="2.88.8" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="$(MSBuildThisFileDirectory)\..\..\Alternet.UI.Maui\Alternet.UI.Maui.csproj" />

	  <ProjectReference Include="$(MSBuildThisFileDirectory)\..\..\..\..\AlternetStudio\Source\Common.AlternetUI\Alternet.Common.AlternetUI.csproj" />
	  <ProjectReference Include="$(MSBuildThisFileDirectory)\..\..\..\..\AlternetStudio\Source\Common\Alternet.Common.csproj" />
	  <ProjectReference Include="$(MSBuildThisFileDirectory)\..\..\..\..\AlternetStudio\Source\Editor.MAUI\Alternet.Editor.MAUI.csproj" />
	  <ProjectReference Include="$(MSBuildThisFileDirectory)\..\..\..\..\AlternetStudio\Source\Editor\Alternet.Editor.AlternetUI.csproj" />
      <ProjectReference Include="$(MSBuildThisFileDirectory)\..\..\..\..\AlternetStudio\Source\Common\Python\Alternet.Common.Python.csproj" />
      <ProjectReference Include="$(MSBuildThisFileDirectory)\..\..\..\..\AlternetStudio\Source\Parsers\Alternet.Syntax.csproj" />
      <ProjectReference Include="$(MSBuildThisFileDirectory)\..\..\..\..\AlternetStudio\Source\Parsers\Python\Alternet.Syntax.Parsers.Advanced.Python.csproj" />
      <ProjectReference Include="$(MSBuildThisFileDirectory)\..\..\..\..\AlternetStudio\Source\Parsers\Roslyn\Alternet.Syntax.Parsers.Roslyn.csproj" />
    </ItemGroup>
</Project>