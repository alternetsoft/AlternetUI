<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             xmlns:editor="clr-namespace:Alternet.Editor;assembly=Alternet.Editor.MAUI.v10"
             x:Class="EditorMAUI.MainPage"
             Title="Alternet.Editor MAUI Demo">
    <Grid RowDefinitions="*,Auto">
        <StackLayout x:Name="panel" 
                           Grid.Row="0">
            <editor:SyntaxEditMaui x:Name="editor" ReadOnly="False" SelectionChanged="editor_SelectionChanged"/>
        </StackLayout>
        <Button Grid.Row="1"
                Margin="0,20"
                FontSize="12"
                Text="OpenLogFile"
                x:Name="openLogFileButton"
                HorizontalOptions="Center" />
    </Grid>
</ContentPage>
