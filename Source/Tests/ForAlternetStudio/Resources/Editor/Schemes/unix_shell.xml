<?xml version="1.0" encoding="utf-8"?>
<LexScheme xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <Author>AlterNET Software</Author>
  <Name>Unix shell</Name>
  <Desc>Syntax Scheme for Unix Shell Language</Desc>
  <Copyright>Copyright AlterNET Software, 2016-2019</Copyright>
  <FileExtension />
  <FileType>unix</FileType>
  <Version>1.5</Version>
  <Styles>
    <Style>
      <Name>idents</Name>
      <ForeColor>ControlText</ForeColor>
      <ForeColorEnabled>true</ForeColorEnabled>
      <BackColorEnabled>true</BackColorEnabled>
      <BoldEnabled>true</BoldEnabled>
      <ItalicEnabled>true</ItalicEnabled>
      <UnderlineEnabled>true</UnderlineEnabled>
    </Style>
    <Style>
      <Name>numbers</Name>
      <ForeColor>ControlText</ForeColor>
      <ForeColorEnabled>true</ForeColorEnabled>
      <BackColorEnabled>true</BackColorEnabled>
      <BoldEnabled>true</BoldEnabled>
      <ItalicEnabled>true</ItalicEnabled>
      <UnderlineEnabled>true</UnderlineEnabled>
    </Style>
    <Style>
      <Name>reswords</Name>
      <ForeColor>Navy</ForeColor>
      <ForeColorEnabled>true</ForeColorEnabled>
      <BackColorEnabled>true</BackColorEnabled>
      <BoldEnabled>true</BoldEnabled>
      <ItalicEnabled>true</ItalicEnabled>
      <UnderlineEnabled>true</UnderlineEnabled>
    </Style>
    <Style>
      <Name>comments</Name>
      <ForeColor>Green</ForeColor>
      <PlainText>true</PlainText>
      <ForeColorEnabled>true</ForeColorEnabled>
      <BackColorEnabled>true</BackColorEnabled>
      <BoldEnabled>true</BoldEnabled>
      <ItalicEnabled>true</ItalicEnabled>
      <UnderlineEnabled>true</UnderlineEnabled>
    </Style>
    <Style>
      <Name>xml_comments</Name>
      <ForeColor>Gray</ForeColor>
      <PlainText>true</PlainText>
      <ForeColorEnabled>true</ForeColorEnabled>
      <BackColorEnabled>true</BackColorEnabled>
      <BoldEnabled>true</BoldEnabled>
      <ItalicEnabled>true</ItalicEnabled>
      <UnderlineEnabled>true</UnderlineEnabled>
    </Style>
    <Style>
      <Name>whitespace</Name>
      <ForeColor>WindowText</ForeColor>
      <ForeColorEnabled>true</ForeColorEnabled>
      <BackColorEnabled>true</BackColorEnabled>
      <BoldEnabled>true</BoldEnabled>
      <ItalicEnabled>true</ItalicEnabled>
      <UnderlineEnabled>true</UnderlineEnabled>
    </Style>
    <Style>
      <Name>strings</Name>
      <ForeColor>ControlText</ForeColor>
      <ForeColorEnabled>true</ForeColorEnabled>
      <BackColorEnabled>true</BackColorEnabled>
      <BoldEnabled>true</BoldEnabled>
      <ItalicEnabled>true</ItalicEnabled>
      <UnderlineEnabled>true</UnderlineEnabled>
    </Style>
    <Style>
      <Name>directives</Name>
      <ForeColor>Green</ForeColor>
      <ForeColorEnabled>true</ForeColorEnabled>
      <BackColorEnabled>true</BackColorEnabled>
      <BoldEnabled>true</BoldEnabled>
      <ItalicEnabled>true</ItalicEnabled>
      <UnderlineEnabled>true</UnderlineEnabled>
    </Style>
  </Styles>
  <States>
    <State>
      <Name>normal</Name>
      <CaseSensitive>true</CaseSensitive>
      <SyntaxBlocks>
        <SyntaxBlock>
          <Name>directive</Name>
          <LexStyle>7</LexStyle>
          <LeaveState>0</LeaveState>
          <Expressions>
            <string>\#.*</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>idents</Name>
          <LexStyle>0</LexStyle>
          <LeaveState>0</LeaveState>
          <ResWordSets>
            <ResWordSet>
              <Name />
              <ResWordStyle>2</ResWordStyle>
              <ResWords>
                <word>readonly</word>
                <word>logout</word>
                <word>else</word>
                <word>then</word>
                <word>bind</word>
                <word>unset</word>
                <word>dirs</word>
                <word>time</word>
                <word>ulimit</word>
                <word>unalias</word>
                <word>command</word>
                <word>select</word>
                <word>printf</word>
                <word>done</word>
                <word>let</word>
                <word>history</word>
                <word>elif</word>
                <word>popd</word>
                <word>read</word>
                <word>getopts</word>
                <word>esac</word>
                <word>typeset</word>
                <word>disown</word>
                <word>exec</word>
                <word>set</word>
                <word>eval</word>
                <word>while</word>
                <word>hash</word>
                <word>exit</word>
                <word>trap</word>
                <word>cd</word>
                <word>test</word>
                <word>wait</word>
                <word>for</word>
                <word>builtin</word>
                <word>pwd</word>
                <word>continue</word>
                <word>pushd</word>
                <word>jobs</word>
                <word>declare</word>
                <word>help</word>
                <word>break</word>
                <word>do</word>
                <word>kill</word>
                <word>return</word>
                <word>shift</word>
                <word>case</word>
                <word>export</word>
                <word>suspend</word>
                <word>alias</word>
                <word>times</word>
                <word>enable</word>
                <word>bg</word>
                <word>if</word>
                <word>shopt</word>
                <word>type</word>
                <word>in</word>
                <word>until</word>
                <word>fi</word>
                <word>echo</word>
                <word>umask</word>
                <word>fg</word>
                <word>local</word>
                <word>fc</word>
                <word>function</word>
              </ResWords>
            </ResWordSet>
          </ResWordSets>
          <Expressions>
            <string>[\.-/A-Z_a-z~_][\.-9A-Z_a-z~_]*</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>comment1</Name>
          <LexStyle>3</LexStyle>
          <LeaveState>1</LeaveState>
          <Expressions>
            <string>/\*</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>comment2</Name>
          <LexStyle>4</LexStyle>
          <LeaveState>2</LeaveState>
          <Expressions>
            <string>///</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>comment3</Name>
          <LexStyle>3</LexStyle>
          <LeaveState>0</LeaveState>
          <Expressions>
            <string>//.*</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>numbers</Name>
          <LexStyle>1</LexStyle>
          <LeaveState>0</LeaveState>
          <Expressions>
            <string>([0-9]+\.[0-9]*(e|E)(\+|\-)?[0-9]+)|([0-9]+\.[0-9]*)|(0(x|X)[0-9a-fA-F]+)|([0-9]+)</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>string1</Name>
          <LexStyle>6</LexStyle>
          <LeaveState>0</LeaveState>
          <Expressions>
            <string>("")|"((((\\")|("")|[^"])*")|(((\\")|("")|[^"])*))</string>
            <string>@("")|"((((\\")|("")|[^"])*")|(((\\")|("")|[^"])*))</string>
            <string>('')|'((((\\')|('')|[^'])*')|(((\\')|('')|[^'])*))</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>whitespace</Name>
          <LexStyle>5</LexStyle>
          <LeaveState>0</LeaveState>
          <Expressions>
            <string>(\s)*</string>
          </Expressions>
        </SyntaxBlock>
      </SyntaxBlocks>
    </State>
    <State>
      <Name>comment</Name>
      <CaseSensitive>true</CaseSensitive>
      <SyntaxBlocks>
        <SyntaxBlock>
          <Name>comment21</Name>
          <LexStyle>3</LexStyle>
          <LeaveState>0</LeaveState>
          <Expressions>
            <string>\*/</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>comment22</Name>
          <LexStyle>3</LexStyle>
          <LeaveState>1</LeaveState>
          <Expressions>
            <string>((?!\*/).)+</string>
          </Expressions>
        </SyntaxBlock>
      </SyntaxBlocks>
    </State>
    <State>
      <Name>commentXML</Name>
      <CaseSensitive>true</CaseSensitive>
      <SyntaxBlocks>
        <SyntaxBlock>
          <Name>comment31</Name>
          <LexStyle>4</LexStyle>
          <LeaveState>4</LeaveState>
          <Expressions>
            <string>\u003C</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>comment32</Name>
          <LexStyle>4</LexStyle>
          <LeaveState>0</LeaveState>
          <Expressions>
            <string>$</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>comment33</Name>
          <LexStyle>3</LexStyle>
          <LeaveState>3</LeaveState>
          <Expressions>
            <string>[^\u003C]*</string>
          </Expressions>
        </SyntaxBlock>
      </SyntaxBlocks>
    </State>
    <State>
      <Name>xml_comment</Name>
      <CaseSensitive>true</CaseSensitive>
      <SyntaxBlocks>
        <SyntaxBlock>
          <Name>comment41</Name>
          <LexStyle>4</LexStyle>
          <LeaveState>4</LeaveState>
          <Expressions>
            <string>\u003C</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>comment42</Name>
          <LexStyle>3</LexStyle>
          <LeaveState>0</LeaveState>
          <Expressions>
            <string>$</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>comment43</Name>
          <LexStyle>3</LexStyle>
          <LeaveState>3</LeaveState>
          <Expressions>
            <string>[^\u003C]*</string>
          </Expressions>
        </SyntaxBlock>
      </SyntaxBlocks>
    </State>
    <State>
      <Name>tag_comment</Name>
      <CaseSensitive>true</CaseSensitive>
      <SyntaxBlocks>
        <SyntaxBlock>
          <Name>comment51</Name>
          <LexStyle>4</LexStyle>
          <LeaveState>0</LeaveState>
          <Expressions>
            <string>$</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>comment52</Name>
          <LexStyle>4</LexStyle>
          <LeaveState>3</LeaveState>
          <Expressions>
            <string>\u003E</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>comment53</Name>
          <LexStyle>4</LexStyle>
          <LeaveState>4</LeaveState>
          <Expressions>
            <string>[^\u003E]*</string>
          </Expressions>
        </SyntaxBlock>
      </SyntaxBlocks>
    </State>
  </States>
</LexScheme>