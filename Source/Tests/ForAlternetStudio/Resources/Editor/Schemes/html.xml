<?xml version="1.0" encoding="utf-8"?>
<LexScheme xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <Author>AlterNET Software</Author>
  <Name>HTML language</Name>
  <Desc>Syntax Scheme for HTML Language</Desc>
  <Copyright>Copyright AlterNET Software, 2016-2019</Copyright>
  <FileExtension>.html;.htm</FileExtension>
  <FileType>html</FileType>
  <Version>1.5</Version>
  <Styles>
    <Style>
      <Name>idents</Name>
      <ForeColor>ControlText</ForeColor>
    </Style>
    <Style>
      <Name>numbers</Name>
      <ForeColor>Green</ForeColor>
    </Style>
    <Style>
      <Name>reswords</Name>
      <ForeColor>Blue</ForeColor>
    </Style>
    <Style>
      <Name>comments</Name>
      <ForeColor>Silver</ForeColor>
      <FontStyle>Italic</FontStyle>
      <PlainText>true</PlainText>
    </Style>
    <Style>
      <Name>whitespace</Name>
      <ForeColor>WindowText</ForeColor>
    </Style>
    <Style>
      <Name>strings</Name>
      <ForeColor>Blue</ForeColor>
    </Style>
    <Style>
      <Name>tagnames</Name>
      <ForeColor>Red</ForeColor>
    </Style>
    <Style>
      <Name>tagIndex</Name>
      <ForeColor>Brown</ForeColor>
    </Style>
  </Styles>
  <States>
    <State>
      <Name>normal</Name>
      <SyntaxBlocks>
        <SyntaxBlock>
          <Name>idents</Name>
          <LexStyle>0</LexStyle>
          <LeaveState>0</LeaveState>
          <ResWordSets>
            <ResWordSet>
              <ResWordStyle>2</ResWordStyle>
              <ResWords>
                <word>&amp;ampe</word>
                <word>&amp;gt</word>
                <word>&amp;nbsp</word>
                <word>&amp;lt</word>
                <word>&amp;quot</word>
              </ResWords>
            </ResWordSet>
          </ResWordSets>
          <Expressions>
            <string>[&amp;_a-zA-Z_][a-zA-Z0-9_]*</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>common1</Name>
          <LexStyle>2</LexStyle>
          <LeaveState>2</LeaveState>
          <Expressions>
            <string>\u003C\/[a-zA-Z_][a-zA-Z0-9_]*</string>
            <string>\u003C[a-zA-Z_][a-zA-Z0-9_]*</string>
            <string>\u003C\![a-zA-Z_][a-zA-Z0-9_]*</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>comment1</Name>
          <LexStyle>3</LexStyle>
          <LeaveState>1</LeaveState>
          <Expressions>
            <string>\u003C\!--</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>whitespace</Name>
          <LexStyle>4</LexStyle>
          <LeaveState>0</LeaveState>
          <Expressions>
            <string>(\s)*</string>
          </Expressions>
        </SyntaxBlock>
      </SyntaxBlocks>
    </State>
    <State>
      <Name>comment</Name>
      <SyntaxBlocks>
        <SyntaxBlock>
          <Name>comment1</Name>
          <LexStyle>3</LexStyle>
          <LeaveState>0</LeaveState>
          <Expressions>
            <string>--\u003E</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>comment2</Name>
          <LexStyle>3</LexStyle>
          <LeaveState>1</LeaveState>
          <Expressions>
            <string>((?!--\u003E).)+</string>
          </Expressions>
        </SyntaxBlock>
      </SyntaxBlocks>
    </State>
    <State>
      <Name>htmltag</Name>
      <SyntaxBlocks>
        <SyntaxBlock>
          <Name>htmltag1</Name>
          <LexStyle>2</LexStyle>
          <LeaveState>0</LeaveState>
          <Expressions>
            <string>\u003E</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>string1</Name>
          <LexStyle>5</LexStyle>
          <LeaveState>2</LeaveState>
          <Expressions>
            <string>("")|"((((\\")|("")|[^"])*")|(((\\")|("")|[^"])*))</string>
            <string>('')|'((((\\')|('')|[^'])*')|(((\\')|('')|[^'])*))</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>tagName</Name>
          <LexStyle>6</LexStyle>
          <LeaveState>2</LeaveState>
          <Expressions>
            <string>[a-zA-Z_][a-zA-Z0-9_]*</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>numbers</Name>
          <LexStyle>1</LexStyle>
          <LeaveState>2</LeaveState>
          <Expressions>
            <string>([0-9]+\.[0-9]*(e|E)(\+|\-)?[0-9]+)|([0-9]+\.[0-9]*)|(\#[0-9a-fA-F]+)|([0-9]+)</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>tagValue</Name>
          <LexStyle>2</LexStyle>
          <LeaveState>3</LeaveState>
          <Expressions>
            <string>\=</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>whitespace</Name>
          <LexStyle>4</LexStyle>
          <LeaveState>2</LeaveState>
          <Expressions>
            <string>(\s)*</string>
          </Expressions>
        </SyntaxBlock>
      </SyntaxBlocks>
    </State>
    <State>
      <Name>tagName</Name>
      <SyntaxBlocks>
        <SyntaxBlock>
          <Name>tag2</Name>
          <LexStyle>2</LexStyle>
          <LeaveState>0</LeaveState>
          <Expressions>
            <string>\u003E</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>string1</Name>
          <LexStyle>5</LexStyle>
          <LeaveState>4</LeaveState>
          <Expressions>
            <string>("")|"((((\\")|("")|[^"])*")|(((\\")|("")|[^"])*))</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>tagName</Name>
          <LexStyle>2</LexStyle>
          <LeaveState>4</LeaveState>
          <Expressions>
            <string>[a-zA-Z_][a-zA-Z0-9_]*</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>whitespace</Name>
          <LexStyle>4</LexStyle>
          <LeaveState>3</LeaveState>
          <Expressions>
            <string>(\s)*</string>
          </Expressions>
        </SyntaxBlock>
      </SyntaxBlocks>
    </State>
    <State>
      <Name>tagValue</Name>
      <SyntaxBlocks>
        <SyntaxBlock>
          <Name>tag2</Name>
          <LexStyle>2</LexStyle>
          <LeaveState>0</LeaveState>
          <Expressions>
            <string>\u003E</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>string1</Name>
          <LexStyle>5</LexStyle>
          <LeaveState>4</LeaveState>
          <Expressions>
            <string>("")|"((((\\")|("")|[^"])*")|(((\\")|("")|[^"])*))</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>tagName</Name>
          <LexStyle>6</LexStyle>
          <LeaveState>4</LeaveState>
          <Expressions>
            <string>[a-zA-Z_][a-zA-Z0-9_]*</string>
          </Expressions>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>whitespace</Name>
          <LexStyle>4</LexStyle>
          <LeaveState>4</LeaveState>
          <Expressions>
            <string>(\s)*</string>
          </Expressions>
        </SyntaxBlock>
      </SyntaxBlocks>
    </State>
  </States>
</LexScheme>