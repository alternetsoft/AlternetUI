<?xml version="1.0" encoding="utf-8"?>
<LexScheme xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="scheme.xsd">
  <Author>Quantum Whale</Author>
  <Name>LUA language</Name>
  <Desc>Syntax Scheme for LUA Language</Desc>
  <Copyright>Copyright Quantum Whale, 2006</Copyright>
  <FileExtension>.lua</FileExtension>
  <FileType>delphi</FileType>
  <Version>1.1</Version>
  <Styles>
    <Style>
      <Name>idents</Name>
      <ForeColor>ControlText</ForeColor>
      <Index>0</Index>
    </Style>
    <Style>
      <Name>numbers</Name>
      <ForeColor>Green</ForeColor>
      <Index>1</Index>
    </Style>
    <Style>
      <Name>reswords</Name>
      <ForeColor>Blue</ForeColor>
      <FontStyle>Bold</FontStyle>
      <Index>2</Index>
    </Style>
    <Style>
      <Name>comments</Name>
      <ForeColor>Silver</ForeColor>
      <FontStyle>Italic</FontStyle>
      <Index>3</Index>
      <PlainText>true</PlainText>
    </Style>
    <Style>
      <Name>whitespace</Name>
      <Index>4</Index>
    </Style>
    <Style>
      <Name>strings</Name>
      <ForeColor>Maroon</ForeColor>
      <Index>5</Index>
    </Style>
  </Styles>
  <States>
    <State>
      <Name>normal</Name>
      <CaseSensitive>true</CaseSensitive>
      <SyntaxBlocks>
        <SyntaxBlock>
          <Name>ident</Name>
          <LexStyle>0</LexStyle>
          <LeaveState>0</LeaveState>
          <ResWordSets>
            <ResWordSet>
              <Name />
              <Index>0</Index>
              <ResWordStyle>2</ResWordStyle>
              <ResWords>
                <word>and</word>
                <word>break</word>
                <word>do</word>
                <word>else</word>
                <word>elseif</word>
                <word>end</word>
                <word>false</word>
                <word>for</word>
                <word>function</word>
                <word>if</word>
                <word>in</word>
                <word>local</word>
                <word>nil</word>
                <word>not</word>
                <word>or</word>
                <word>repeat</word>
                <word>return</word>
                <word>then</word>
                <word>true</word>
                <word>until</word>
                <word>while</word>
              </ResWords>
            </ResWordSet>
          </ResWordSets>
          <Expressions>
            <string>[a-zA-Z_][a-zA-Z0-9_]*</string>
          </Expressions>
          <Index>0</Index>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>longcomment</Name>
          <LexStyle>3</LexStyle>
          <LeaveState>1</LeaveState>
          <Expressions>
            <string>--\[(\=)*\[</string>
          </Expressions>
          <Index>1</Index>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>comment</Name>
          <LexStyle>3</LexStyle>
          <LeaveState>0</LeaveState>
          <Expressions>
            <string>--.*</string>
          </Expressions>
          <Index>2</Index>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>number</Name>
          <LexStyle>1</LexStyle>
          <LeaveState>0</LeaveState>
          <Expressions>
            <string>([0-9]+\.[0-9]*(e|E)(\+|\-)?[0-9]+)|([0-9]+\.[0-9]*)|(0x[0-9a-fA-F]+)|([0-9]+)</string>
          </Expressions>
          <Index>3</Index>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>string</Name>
          <LexStyle>5</LexStyle>
          <LeaveState>0</LeaveState>
          <Expressions>
            <string>("")|"((((\\")|("")|[^"])*")|(((\\")|("")|[^"])*))</string>
            <string>('')|'((((\\')|('')|[^'])*')|(((\\')|('')|[^'])*))</string>
          </Expressions>
          <Index>4</Index>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>longstring</Name>
          <LexStyle>5</LexStyle>
          <LeaveState>2</LeaveState>
          <Expressions>
            <string>\[(\=)*\[</string>
          </Expressions>
          <Index>5</Index>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>whitespace</Name>
          <LexStyle>4</LexStyle>
          <LeaveState>0</LeaveState>
          <Expressions>
            <string>(\s)*</string>
          </Expressions>
          <Index>6</Index>
        </SyntaxBlock>
      </SyntaxBlocks>
      <Index>0</Index>
    </State>
    <State>
      <Name>longcomment</Name>
      <CaseSensitive>false</CaseSensitive>
      <SyntaxBlocks>
        <SyntaxBlock>
          <Name>comment11</Name>
          <LexStyle>3</LexStyle>
          <LeaveState>0</LeaveState>
          <Expressions>
            <string>\](\=)*\]</string>
          </Expressions>
          <Index>0</Index>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>comment12</Name>
          <LexStyle>3</LexStyle>
          <LeaveState>1</LeaveState>
          <Expressions>
            <string>((?!\](\=)*\]).)+</string>
          </Expressions>
          <Index>1</Index>
        </SyntaxBlock>
      </SyntaxBlocks>
      <Index>1</Index>
    </State>
    <State>
      <Name>longstring</Name>
      <CaseSensitive>false</CaseSensitive>
      <SyntaxBlocks>
        <SyntaxBlock>
          <Name>string11</Name>
          <LexStyle>5</LexStyle>
          <LeaveState>0</LeaveState>
          <Expressions>
            <string>\](\=)*\]</string>
          </Expressions>
          <Index>0</Index>
        </SyntaxBlock>
        <SyntaxBlock>
          <Name>string12</Name>
          <LexStyle>5</LexStyle>
          <LeaveState>2</LeaveState>
          <Expressions>
            <string>((?!\](\=)*\]).)+</string>
          </Expressions>
          <Index>1</Index>
        </SyntaxBlock>
      </SyntaxBlocks>
      <Index>2</Index>
    </State>
  </States>
</LexScheme>