<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AlternetUIPath>$(MSBuildProjectDirectory)\..\..\..\..\AlternetUI\</AlternetUIPath>
    <OutputType>WinExe</OutputType>
    <TargetFrameworks>net8.0;net7.0;net6.0</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <Platforms>AnyCPU;x64</Platforms>
    <ApplicationIcon>Sample.ico</ApplicationIcon>
    <!-- <ApplicationManifest>app.manifest</ApplicationManifest> -->
  </PropertyGroup>

  <Import Project="$(AlternetUIPath)\Source\Build\Alternet.UI.Copy.props" />

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <OutputPath>..\..\..\..\bin\Release\Demos.Editor.X\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Sample.ico" />
  </ItemGroup>

  <ItemGroup>
	<ProjectReference Include="..\..\..\Source\Common.AlternetUI\Alternet.Common.AlternetUI.csproj" />
	<ProjectReference Include="$(AlternetUIPath)\Source\Samples\ControlsSampleDll\ControlsSampleDll.csproj" />
    <ProjectReference Include="..\..\..\Source\Common\Alternet.Common.csproj" />
    <ProjectReference Include="..\..\..\Source\Editor\Alternet.Editor.AlternetUI.csproj" />
    <ProjectReference Include="..\..\..\Source\Parsers\Alternet.Syntax.csproj" />
    <ProjectReference Include="..\..\..\Source\Parsers\Roslyn\Alternet.Syntax.Parsers.Roslyn.csproj" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Sample.ico" />
  </ItemGroup>

   <!-- ====================================================== -->

</Project>
