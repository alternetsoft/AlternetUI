    <Target Name="BuildDocumentation2" AfterTargets="Build" Condition="$(UseLatestDocFx)">
	<Message Text="Build Documentation New style" Importance="high" />
        <Exec Command="docfx docfxnew.json" Condition="!$(NeedBuildTest)"/>
        <Exec Command="docfx docfxtest.json" Condition="$(NeedBuildTest)"/>
    </Target>

    <Target Name="SplitSitemap" AfterTargets="$(BuildDocumentationTN)">
        <Exec Command="dotnet build --property WarningLevel=0 &quot;$(ProjectDir)\..\..\Source\Tools\SitemapSplitter\SitemapSplitter.csproj&quot;" />
        <Exec Command="&quot;$(ProjectDir)\..\..\Source\Tools\SitemapSplitter\bin\Debug\net6.0\SitemapSplitter.exe&quot; split --SourceSiteMapPath=&quot;$(ProjectDir)\site\sitemap.xml&quot; --OutputDirectoryPath=&quot;$(ProjectDir)\site\&quot; --ConfigFilePath=&quot;$(ProjectDir)\SitemapSplitter.config.xml&quot;" />
        <Exec Command="del &quot;$(ProjectDir)\site\sitemap.xml&quot;" />
    </Target>
</Project>