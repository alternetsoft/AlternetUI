{
  "metadata": [
    {
      "properties": 
        {
          "WarningLevel": "0"
        },
      "src": [
        {
          "src": "../../Source",
          "files": [
		 "Alternet.UI.Interfaces/Alternet.UI.Interfaces.csproj",
		 "Alternet.UI.Common/Alternet.UI.Common.csproj",
		 "Alternet.UI/Alternet.UI.csproj"
		 ],
          "exclude":
		 [
		 	"Alternet.UI.Common/Port/**",
		 	"Alternet.UI.Common/Xaml/**",
			"**/bin/**",
		 	"**/obj/**"
		 ]
        }
      ],
	"memberLayout": "separatePages", //samePage
	"namespaceLayout": "flattened", //nested
      "dest": "api",
      "filter": "filterConfig.yml",
      "disableGitFeatures": false
    }
  ],
  "build": {
    "fileMetadata": {
      "pdf": {
        "pdf/**/toc.yml": true,
        "navigation/**/toc.yml": false,
        "api/**/toc.yml": false
      },
    },
    "content": [
      {
        "files": "navigation/**"
      },
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "pdf/**/toc.yml",
          "articles/**.md",
          "articles/**/toc.yml",
          "introduction/**.md",
          "introduction/**/toc.yml",
          "tutorials/**.md",
          "tutorials/**/toc.yml",
          "how-to-guides/**.md",
          "how-to-guides/**/toc.yml",
          "toc.yml",
          "*.md"
        ],
        "exclude": [
          "articles/**/examples/**",
          "introduction/**/examples/**",
          "tutorials/**/examples/**",
          "how-to-guides/**/examples/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "**/images/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**"
        ],
        "exclude": [
          "obj/**",
          "site/**",
          "apidoc/**/images/**",
          "apidoc/**/examples/**"
        ]
      }
    ],
    "dest": "site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
 	"default",
      	"modern",
	"templates/newoverride"
    ],
    "xrefservice": [ "https://xref.docs.microsoft.com/query?uid={uid}" ],
    "postProcessors": [ "ExtractSearchIndex" ],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false,
    "globalMetadata": {
      "pdf": true,
      "pdfTocPage": true,
      "_appLogoUrl":"https://www.alternet-ui.com/",
      "_appLogoPath": "images/logo/logo.svg",
      "_appFaviconPath": "images/logo/favicon.ico",
      "_disableContribution": true,
      "_enableNewTab": false,
	//"_appName": "AlterNET UI",
      "_appTitle": "AlterNET UI Documentation",
      "_appFooter": "<span>Download <a href='https://docs.alternet-ui.com/pdf/alternet-ui-manual.pdf'>PDF</a>. Copyright (c) 2021-2025 AlterNET Software</span>",
      "_enableSearch": true
    },
    "sitemap": {
      "baseUrl": "https://docs.alternet-ui.com/"
    }
  }
}

